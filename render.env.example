# ============================================
# RENDER.COM ENVIRONMENT VARIABLES
# Copy & Paste vào Render Dashboard
# Settings > Environment > Add Environment Variable
# ============================================

# Python Version
PYTHON_VERSION=3.12

# Application Info
APP_NAME=Plant Disease Detection API
APP_VERSION=2.0.0
DEBUG=false

# Security (Render will auto-generate if you use "Generate Value" button)
# SECRET_KEY=<click "Generate Value" button on Render>

# Server Settings
HOST=0.0.0.0
# PORT=<automatically set by Render, do not add>

# File Upload Settings
MAX_FILE_SIZE=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg
SESSION_MAX_AGE=86400

# Image Processing
IMG_HEIGHT=224
IMG_WIDTH=224

# TensorFlow Optimization
TF_ENABLE_ONEDNN_OPTS=0
TF_CPP_MIN_LOG_LEVEL=2

# CORS Settings (allow all origins)
CORS_ORIGINS=*

# ============================================
# HƯỚNG DẪN THÊM TRÊN RENDER:
# ============================================
# 1. Vào Render Dashboard > Your Service
# 2. Click "Environment" tab
# 3. Click "Add Environment Variable"
# 4. Copy từng dòng trên (format: KEY=VALUE)
# 5. Với SECRET_KEY: Click "Generate Value" thay vì paste
# 6. Click "Save Changes"
# ============================================
